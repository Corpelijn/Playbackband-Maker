@{
    ViewBag.Title = "Main";
}

@if (!PBB_Web.Classes.SessionClass.IsAuthorized())
{
    Response.Redirect("~");
}

<br />

<div class="col-md-8">

    <div class="col-md-12">
        <h3>Selecteer hieronder een van de beschikbare playbackbanden om deze te kunnen inzien of bewerken.</h3>
        <h5>Druk op de knop "Nieuwe playbackband toevoegen" om een nieuwe playbackband toe te voegen</h5>
        <br />
    </div>

    <div class="col-md-12">
        <div class="btn btn-success">Nieuwe playbackband toevoegen</div>
    </div>

    <div class="col-md-12">
        <br />
        <br />
    </div>


    <div>
        @for (int i = 0; i < 10; i++)
        {
            <div class="col-md-2">
                <a href="Index" style="text-decoration: none">
                    <div class="btn btn-primary btn-block btn-outline">
                        <h3>2015</h3>
                    </div>
                </a>
            </div>
                
            if (i % 6 == 4)
            {
            <div class="col-md-12">
                <br />
            </div>
            }
        }
    </div>
</div>