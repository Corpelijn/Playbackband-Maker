@{
    ViewBag.Title = "Toevoegen";
}

@if (!PBB_Web.Classes.SessionClass.IsAuthorized())
{
    Response.Redirect("~");
}

<div class="col-md-6">

<h2>Nieuwe playbackband toevoegen</h2>

<br />
<br />
<br />

    <table class="table">
        <tr>
            <td style="width:50%"></td>
            <td style="width:17%"><b>Dag 1</b></td>
            <td style="width:8%"></td>
            <td style="width:25%"><b>Dag 2</b></td>
        </tr>
        <tr>
            <td>
                <div class="form-control-static">
                    <b>Dagen van de playbackband</b>
                </div>
            </td>
            <td colspan="2">
                <input class="form-control" type="date" value="23-01-2015" />
            </td>
            <td>
                <input class="form-control" type="date" value="24-01-2015" />
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-control-static">
                    <b>Aantal blokken in de nieuwe playbackband</b>
                </div>
            </td>
            <td>
                <input class="form-control" type="number" value="7" min="2" max="10" />
            </td>
            <td></td>
            <td></td>
        </tr>
    </table>
</div>
