                            </td>
                        </tr>
                    }
                    <tr>
                        @using (Html.BeginForm("Taal", "Settings"))
                        {
                            <td>
                                <input type="text" class="form-control" placeholder="Taal" name="taal" /></td>
                            <td>
                                <input type="text" class="form-control" placeholder="Afkorting" name="afkorting" /></td>
                            <td>
                                <button class="btn btn-success btn-sm col-md-11" type="submit">Toevoegen</button></td>
